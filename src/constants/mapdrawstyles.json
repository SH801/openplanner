[
    {
        "id": "highlight-active-points",
        "type": "circle",
        "filter": ["all",
            ["==", "$type", "Point"],
            ["==", "meta", "feature"],
            ["==", "active", "true"]],
        "paint": {
            "circle-radius": 7,
            "circle-color": "#000000"
        }
    },
    {
        "id": "points-are-blue",
        "type": "circle",
        "filter": ["all",
            ["==", "$type", "Point"],
            ["==", "meta", "feature"],
            ["==", "active", "false"]],
        "paint": {
            "circle-radius": 5,
            "circle-color": "#000088"
        }
    },
    {
        "id": "gl-draw-line",
        "type": "line",
        "filter": ["all", ["==", "$type", "LineString"], ["!=", "mode", "static"]],
        "layout": {
            "line-cap": "round",
            "line-join": "round"
        },
        "paint": {
            "line-color": "black",
            "line-dasharray": [0.2, 2],
            "line-width": 2
        }
    },
    {
      "id": "gl-draw-polygon-fill",
      "type": "fill",
      "filter": ["all", ["==", "$type", "Polygon"], ["!=", "mode", "static"]],
      "paint": {
          "fill-color": "black",
          "fill-outline-color": "black",
          "fill-opacity": 0
      }
    },
    {
      "id": "gl-draw-polygon-midpoint",
      "type": "circle",
      "filter": ["all",
          ["==", "$type", "Point"],
          ["==", "meta", "midpoint"]],
      "paint": {
          "circle-radius": 5,
          "circle-color": "grey"
      }
    },
    {
      "id": "gl-draw-polygon-stroke-active",
      "type": "line",
      "filter": ["all", ["==", "$type", "Polygon"], ["!=", "mode", "static"]],
      "layout": {
          "line-cap": "round",
          "line-join": "round"
      },
      "paint": {
          "line-color": "grey",
          "line-dasharray": [0.2, 2],
          "line-width": 2
      }
    },
    {
      "id": "gl-draw-polygon-and-line-vertex-halo-active",
      "type": "circle",
      "filter": ["all", ["==", "meta", "vertex"], ["==", "$type", "Point"], ["!=", "mode", "static"]],
      "paint": {
          "circle-radius": 7,
          "circle-color": "#FFF"
      }
    },
    {
      "id": "gl-draw-polygon-and-line-vertex-active",
      "type": "circle",
      "filter": ["all", ["==", "meta", "vertex"], ["==", "$type", "Point"], ["!=", "mode", "static"]],
      "paint": {
          "circle-radius": 5,
          "circle-color": "#000"
      }
    }
  ]